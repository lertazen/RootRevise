@model List<Comment>

<div class="d-flex justify-content-between align-items-center mb-4">
   <div class="pagetitle">
      <h1>Comment List</h1>
   </div>
   <a asp-controller="Comment" asp-action="AddComment" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i>Add a comment
   </a>

</div>


<section class="section">
   <div class="row">
      <div class="col-lg-12">

         <div class="card">
            <div class="card-body">

               <table id="commentTable" style="width: 100%">
                  <thead>
                     <tr>
                        <th>Author</th>
                        <th>Message</th>
                        <th>Created</th>
                     </tr>
                  </thead>
                  @foreach (var comment in Model) {
                     <tr>
                        <td>@comment.Author.UserName</td>
                        <td>@comment.CommentText</td>
                        <td>@comment.DateCreated</td>
                     </tr>
                  }
               </table>

            </div>
         </div>

      </div>
   </div>
</section>
