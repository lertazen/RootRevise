@model List<Issue>

<div class="d-flex justify-content-between align-items-center mb-4">
   <div class="pagetitle">
      <h1>Issue List</h1>
   </div>
   <a asp-controller="Issue" asp-action="Upsert" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i>Create a New Issue
   </a>

</div>


<section class="section">
   <div class="row">
      <div class="col-lg-12">

         <div class="card">
            <div class="card-body">

               <h5 class="card-title">Issue Table</h5>
               <table id="issueTable" style="width: 100%">
                  <thead>
                     <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Project</th>
                        <th>Date Reported</th>
                        <th>Due Date</th>
                        <th></th>
                     </tr>
                  </thead>
               </table>

            </div>
         </div>

      </div>
   </div>
</section>

@section Scripts {
   <script src="~/js/issue.js"></script>
}