@model List<Project>

<div class="d-flex justify-content-between align-items-center mb-4">
   <div class="pagetitle">
      <h1>Project List</h1>
   </div>
   <a asp-controller="Project" asp-action="Upsert" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i>Create a New Project
   </a>

</div>


<section class="section">
   <div class="row">
      <div class="col-lg-12">

         <div class="card">
            <div class="card-body">

               <table class="table table-striped">
                  <thead>
                     <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th></th>
                     </tr>
                  </thead>

                  <tbody>
                     @foreach (var project in Model) {
                        <tr>
                           <td>@project.Name</td>
                           <td>@project.Description</td>
                           <td>
                              <a class="btn btn-info" asp-controller="Project" asp-action="Details" asp-route-projectId="@project.ProjectId">
                                 <i class="bi bi-card-text me-2"></i>Details
                              </a>
                           </td>
                        </tr>
                     }
                  </tbody>
               </table>

            </div>
         </div>

      </div>
   </div>
</section>
