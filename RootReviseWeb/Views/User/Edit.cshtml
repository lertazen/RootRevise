@model UserVM

<div class="d-flex justify-content-center align-items-center mb-4">
   <div class="pagetitle">
      <h2>

         Edit User
      </h2>
   </div>
</div>


<section class="section">
   <div class="row">
      <div class="col-lg-12">

         <div class="card">
            <div class="card-body">

               <form method="post" class="row g-3">
                  <input asp-for="@Model.ApplicationUser.Id" hidden />
                  <div class="col-12">
                     <label asp-for="@Model.ApplicationUser.Name" class="form-label"></label>
                     <input asp-for="@Model.ApplicationUser.Name" type="text" class="form-control" />
                     <span asp-validation-for="@Model.ApplicationUser.Name" class="text-danger"></span>
                  </div>
                  <div class="col-12">
                     <label asp-for="@Model.ApplicationUser.UserName" class="form-label">User Name</label>
                     <input asp-for="@Model.ApplicationUser.UserName" type="text" class="form-control" />
                     <span asp-validation-for="@Model.ApplicationUser.UserName" class="text-danger"></span>
                  </div>
                  <div class="col-12">
                     <label asp-for="@Model.ApplicationUser.Email" class="form-label"></label>
                     <input asp-for="@Model.ApplicationUser.Email" type="text" class="form-control" />
                     <span asp-validation-for="@Model.ApplicationUser.Email" class="text-danger"></span>
                  </div>
                  <div class="col-12">
                     <label asp-for="@Model.RoleList" class="form-label"></label>
                     <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select">
                     </select>
                  </div>

                  <div class="d-flex col-12">

                     <button type="submit" asp-action="Edit" class="btn btn-primary me-3">
                        Update
                     </button>
                     <a asp-controller="User" asp-action="Index" class="btn btn-secondary">
                        Back
                     </a>

                  </div>
               </form>

            </div>
         </div>

      </div>
   </div>
</section>


@section Scripts {
   <script src="/js/user.js"></script>
}